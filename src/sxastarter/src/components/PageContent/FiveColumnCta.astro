---
import {
  Field,
  ImageField,
  LinkField,
} from "@astro-sitecore-jss/astro-sitecore-jss";
import FiveColumn from "components/NestedComponents/FiveColumn.astro";

interface Fields {
  Text1: Field<string>;
  Image1: ImageField;
  Link1: LinkField;
  Text2: Field<string>;
  Image2: ImageField;
  Link2: LinkField;
  Text3: Field<string>;
  Image3: ImageField;
  Link3: LinkField;
  Text4: Field<string>;
  Image4: ImageField;
  Link4: LinkField;
  Text5: Field<string>;
  Image5: ImageField;
  Link5: LinkField;
}

export type FiveColumnCtaProps = {
  params: { [key: string]: string };
  fields: Fields;
};

const props: FiveColumnCtaProps = Astro.props.route;
const id = props.params.RenderingIdentifier;
---

<div
  class={`component component-spaced five-column-cta ${props.params.styles.trimEnd()}`}
  id={id ? id : undefined}
>
  <div class="container">
    <div
      class="row row-cols-2 row-cols-sm-3 row-cols-lg-5 row-gap-3 gx-5 justify-content-center"
    >
      <FiveColumn
        image={props.fields.Image1}
        text={props.fields.Text1}
        link={props.fields.Link1}
        delay={0}
      />
      <FiveColumn
        image={props.fields.Image2}
        text={props.fields.Text2}
        link={props.fields.Link2}
        delay={500}
      />
      <FiveColumn
        image={props.fields.Image3}
        text={props.fields.Text3}
        link={props.fields.Link3}
        delay={1000}
      />
      <FiveColumn
        image={props.fields.Image4}
        text={props.fields.Text4}
        link={props.fields.Link4}
        delay={1500}
      />
      <FiveColumn
        image={props.fields.Image5}
        text={props.fields.Text5}
        link={props.fields.Link5}
        delay={2000}
      />
    </div>
  </div>
</div>
