---
import { Field, ImageField, LinkField } from "@astro-sitecore-jss/astro-sitecore-jss";
import { ComponentProps } from "lib/component-props";
import TwoColumn from "components/NestedComponents/TwoColumn.astro";

interface Fields {
  Title1: Field<string>;
  Text1: Field<string>;
  Image1: ImageField;
  Link1: LinkField;
  Title2: Field<string>;
  Text2: Field<string>;
  Image2: ImageField;
  Link2: LinkField;
}

export type TwoColumnCtaProps = ComponentProps & {
  params: { [key: string]: string };
  fields: Fields;
};

const props: TwoColumnCtaProps = Astro.props.route;
const id = props.params.RenderingIdentifier;
---

<div
  class={`component two-column-cta pb-5 ${props.params.styles.trimEnd()}`}
  id={id ? id : undefined}
>
  <div class="container">
    <div class="row">
      <TwoColumn
        image={props.fields.Image1}
        title={props.fields.Title1}
        text={props.fields.Text1}
        link={props.fields.Link1}
        placeholder="two-col-placeholder-left"
        delay={0}
        route={props}
      />
      <TwoColumn
        image={props.fields.Image2}
        title={props.fields.Title2}
        text={props.fields.Text2}
        link={props.fields.Link2}
        placeholder="two-col-placeholder-right"
        delay={500}
        route={props}
      />
    </div>
  </div>
</div>
