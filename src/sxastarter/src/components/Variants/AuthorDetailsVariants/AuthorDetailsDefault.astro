---
import {
  AstroImage,
  Text,
  RichText,
} from "@astro-sitecore-jss/astro-sitecore-jss";
import Placeholder from "components/system/Placeholder.astro";
import ParallaxBackgroundImage from "components/NonSitecore/ParallaxBackgroundImage.astro";
import { AuthorDetailsProps } from "components/PageContent/AuthorDetails.astro";


const props: AuthorDetailsProps = Astro.props.route;
const id = props.params.RenderingIdentifier;
---

<div
  class={`component author-details page-background col-12 ${props.params?.styles?.trimEnd()}`}
  id={id ? id : undefined}
>
  <ParallaxBackgroundImage BackgroundImage={props.fields.BackgroundImage} />

  <div class="container">
    <Placeholder name="page-navigation" rendering={props.rendering} />
  </div>

  <div>
    <div class="background-content component-spaced container rounded-corners">
      <div class="p-3 p-sm-5">
        <div class="">
          <div class="row row-gap-4 gx-5">
            <div class="col-12 col-lg-5">
              <AstroImage field={props.fields.Photo} class="author-img" />
            </div>
            <div class="col-12 col-lg-7">
              <h1 class="author-name display-5 fw-bold">
                <Text field={props.fields.Name} />
              </h1>
              <p class="author-position fs-4">
                <Text field={props.fields.Position} />
              </p>
              <hr />
              <div class="author-bio">
                <RichText field={props.fields.Bio} />
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <Placeholder
            name="background-page-content"
            rendering={props.rendering}
          />
        </div>
      </div>
    </div>
    <Placeholder name="page-content" rendering={props.rendering} />
  </div>
</div>
