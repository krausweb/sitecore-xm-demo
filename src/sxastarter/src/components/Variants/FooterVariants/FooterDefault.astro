---
import {
  AstroImage,
  Link,
  RichText,
  Text,
} from "@astro-sitecore-jss/astro-sitecore-jss";
import { FooterProps } from "components/Navigation/Footer.astro";

const id = Astro.props.id;
const props: FooterProps = Astro.props.route;
---

<div
  class={`component component-spaced footer ${props.params.styles.trimEnd()}`} 
  id={id ? id : undefined}
>
  <div class="container">
    <div class="content">
      <div class="logo">
        <AstroImage field={props.fields?.Image1} class="img-fluid" />
      </div>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-xl-4 row-gap-5 gx-5">
        <div class="col">
          <div class="title">
            <Text field={props.fields?.Title1} />
          </div>
          <div class="links">
            <RichText field={props.fields?.Text1} />
          </div>
        </div>
        <div class="col">
          <div class="title">
            <Text field={props.fields?.Title2} />
          </div>
          <div class="links">
            <RichText field={props.fields?.Text2} />
          </div>
        </div>
        <div class="col">
          <div class="title">
            <Text field={props.fields?.Title3} />
          </div>
          <div class="links">
            <RichText field={props.fields?.Text3} />
          </div>
        </div>
        <div class="col">
          <div class="title">
            <Text field={props.fields?.Title4} />
          </div>
          <div class="links">
            <RichText field={props.fields?.Text4} />
          </div>
        </div>
      </div>
    </div>
    <hr />
    <div class="footnote">
      <Text field={props.fields?.Copyright} />
      <div class="privacy-links">
        <Link field={props.fields?.Link1} />
        <Link field={props.fields?.Link2} />
      </div>
    </div>
  </div>
</div>